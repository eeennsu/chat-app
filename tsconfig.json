{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/app/*"],
      "@widgets/*": ["src/widgets/*"],
      "@features/*": ["src/features/*"],
      "@entities/*": ["src/entities/*"],
      "@shared/*": ["src/shared/*"],
      "@shared/shadcn/*": ["src/shared/shadcn-ui/*"],
      "@utils/*": ["src/shared/utils/*"],
      "@shadcn-ui/*": ["src/shared/shadcn-ui/*"],
      "@stores/*": ["src/shared/stores/*"],
      "@hooks/*": ["src/shared/hooks/*"],
      "@libs/*": ["src/shared/libs/*"],
      "@typings/*": ["src/shared/typings/*"],
      "@consts/*": ["src/shared/consts/*"],
      "@contracts/*": ["src/shared/contracts/*"],
      "@components/*": ["src/shared/components/*"],
      "@configs/*": ["src/shared/configs/*"],
      "@styles/*": ["src/shared/styles/*"],
      "@theme": ["src/shared/styles/theme.ts"],
      "@db/*": ["src/db/*"],
      "dayjs": ["./src/configs/setup/dayjs.ts"],
      "@services/*": ["src/services/*"]
    },
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "src",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "build"]
}
